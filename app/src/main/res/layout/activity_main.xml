<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome da proteina"
        android:id="@+id/et_nome_proteina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome Carboidrato"
        android:id="@+id/et_nome_carboidrato"
        app:layout_constraintTop_toBottomOf="@id/et_nome_proteina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome Legume"
        android:id="@+id/et_nome_Legume"
        app:layout_constraintTop_toBottomOf="@id/et_nome_carboidrato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome GrÃ£o"
        android:id="@+id/et_nome_grao"
        app:layout_constraintTop_toBottomOf="@id/et_nome_Legume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botao_cadastro"
        android:background="@drawable/button_style"
        style="@style/frase_bt"
        app:layout_constraintTop_toBottomOf="@id/et_nome_grao"
        android:id="@+id/bt_cadastrar"
        android:onClick="cadastrarMarmita"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botao_trocar_tela"
        android:background="@drawable/button_style"
        style="@style/frase_bt"
        app:layout_constraintTop_toBottomOf="@id/bt_cadastrar"
        android:id="@+id/bt_trocar_tela"
        android:onClick="trocarTela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>